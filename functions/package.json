{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "esbuild src/index.ts --outdir=./lib --target=node18 --platform=node --format=cjs --sourcemap --bundle --watch",
    "ci": "biome ci src tests",
    "deploy": "firebase deploy --only functions",
    "format": "biome format --write src tests",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "logs": "firebase functions:log",
    "serve": "bun run build && firebase emulators:start --only functions",
    "shell": "bun run build && firebase functions:shell",
    "start": "bun run shell",
    "test": "vitest run --coverage --typecheck",
    "test:watch": "vitest watch --coverage --typecheck"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@ourway/patch": "^0.1.2",
    "firebase": "^10.13.1",
    "firebase-admin": "^12.4.0",
    "firebase-functions": "^6.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@vitest/coverage-v8": "^2.0.5",
    "firebase-functions-test": "^3.3.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "private": true,
  "trustedDependencies": [
    "@biomejs/biome",
    "protobufjs"
  ]
}
