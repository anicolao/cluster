{
  "compilerOptions": {
    "paths": {
      "$common/*": ["./src/common/*"]
    },
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "compileOnSave": true,
  "include": ["src"]
}
